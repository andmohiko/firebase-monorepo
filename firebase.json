{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "apps/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "cd apps/functions && npm run lint:eslint",
        "cd apps/functions && npm run pre-build"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5050
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4400
    },
    "ui": {
      "enabled": true
    }
  }
}
