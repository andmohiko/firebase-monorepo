{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~": ["./src"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
